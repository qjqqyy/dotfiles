set nocompatible ruler laststatus=2 showcmd noshowmode number
set incsearch ignorecase smartcase hlsearch
set title
set shortmess+=I
"set breakindent
execute pathogen#infect()
syntax enable
set backspace=indent,eol,start

"set foldcolumn=2 foldmethod=syntax foldlevel=99 foldenable

set mouse=a
"set tw=80
set colorcolumn=81

if $USER != 'root'
    set modeline modelines=5
else
    set nomodeline viminfo=
endif

colorscheme base16-monokai
set cursorline

set t_Co=16
filetype plugin indent on


au FileType c,h,java,js setlocal mps+==:;
au FileType c,h setlocal cindent
au FileType pl,perl,perl6 setlocal sw=4 sts=4 et
au FileType zsh setlocal sw=2 ts=2 et
au FileType tex setlocal sw=4 ts=4 et cc=0

let g:airline_theme='base16_monokai'
let g:airline_powerline_fonts=0
if !exists('g:airline_symbols')
    let g:airline_symbols = {}
endif
" unicode symbols
let g:airline_left_sep = ' '
let g:airline_left_alt_sep = '|'
let g:airline_right_sep = ' '
let g:airline_right_alt_sep = ' '
let g:airline_symbols.linenr = '¶'
let g:airline_symbols.whitespace = 'Ξ'
let g:airline_symbols.maxlinenr = ''


if has('gui_running')
"    set guifont=Source\ Code\ Pro\ Medium\ 10
    set guicursor+=a:blinkon0
    set guioptions-=m
    set guioptions-=r
    set guioptions-=T
endif
if filereadable($HOME . "/.vim/vimrc.local")
    source ~/.vim/vimrc.local
endif
