{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\": \" + (now | tostring | split(\".\")[0]) + \":0;\" + (.tool_input.command | gsub(\"\\n\"; \"\\\\\\n\"))' >> ~/.claude/bash_history"
          }
        ]
      }
    ]
  }
}