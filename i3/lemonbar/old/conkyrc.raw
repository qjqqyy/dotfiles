conky.config = {
    background = false
,   update_interval = 2
,   update_interval_on_battery = 5
,   total_run_times = 0
,   uppercase = false
,   out_to_console = true
,   out_to_x = false
,   if_up_strictness = 'address'
,   format_human_readable = true
}

conky.text = [[
${if_match ${loadavg 1} >= 3}%{B@red F@base05}$else%{B@base06 F-}$endif \
 ${loadavg 1} \
%{B@base07 F-}  $fs_free \
${if_match "$battery_short" < "D"}\
# charging
%{B@base06 F${if_match $battery_percent >= 90}@green${else}@cyan${endif}} \
$else${if_match "$battery_short" < "E"}\
# discharging
%{B${if_match $battery_percent >= 50}@base06 F-} ${else}@purple F@base01} ${endif}\
$else${if_match "$battery_short" < "F"}\
# empty
%{B@red F@base07} \
$else${if_match "$battery_short" < "G"}\
# full
%{B@base06 F@green} \
$endif$endif$endif$endif \
$battery_percent% \
${if_empty $battery_time}${else}%{F@base03}| $battery_time $endif\
%{B${if_match $acpitemp >= 45}@red F@base05${else}@base07 F-${endif}} \
 ${acpitemp}°C \
${if_up wlan0}%{B@base06 F-}  ${addr wlan0}${else}%{B@magenta F@base05}  down${endif} \
%{B@base07 \
${if_match ${execi 5 sysctl -n dev.acpi_ibm.0.mute} == 0}\
${if_match ${mixer vol} > 0}F-}  ${else}F@red}    ${endif}\
${mixer vol}\
${else}F@red}    0${endif}% \
%{B@base06 F-} ${time %a %d %b %%{F<DELETE FOLLOWING BACKSLASH>@base05}|%%{F-} %H:%M} 
]]
